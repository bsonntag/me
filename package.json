{
  "name": "bsonntag.me",
  "version": "0.2.1",
  "private": true,
  "description": "My personal website",
  "license": "UNLICENSED",
  "author": "Benjamim Sonntag <benjamimsonntag@gmail.com>",
  "main": "./src/index.js",
  "repository": "https://github.com/bsonntag/bsonntag.github.io",
  "scripts": {
    "bundle": "npm run bundle:cleanup && npm run bundle:html-bundler && npm run bundle:html && npm run bundle:assets && npm run bundle:js",
    "bundle:assets": "cp src/assets/* dist/",
    "bundle:cleanup": "rm -rf dist/* && mkdir -p dist/blog",
    "bundle:html": "node build/bin/bundle-html.js",
    "bundle:html-bundler": "parcel build --out-dir ./build/bin --public-url /static --target node src/bin/bundle-html.js",
    "bundle:js": "SSR=true parcel build --out-dir ./dist/static --public-url /static src/client/app.js",
    "lint": "eslint src",
    "release": "babel-node src/bin/release/index.js",
    "ssr-start": "nodemon --watch build build/server/index.js",
    "ssr-watch-client": "SSR=true parcel watch --out-dir ./build/client --public-url /static src/client/app.js",
    "ssr-watch-server": "parcel watch --out-dir ./build/server --public-url /static --target node src/server/index.js",
    "start": "parcel --out-dir build --port 3000 src/client/index.html"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "color": "^2.0.1",
    "express": "^4.16.2",
    "morgan": "^1.9.0",
    "prismjs": "^1.11.0",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-helmet": "^5.2.0",
    "react-markdown": "^3.1.5",
    "react-remarkbox": "^0.0.1",
    "react-router-dom": "^4.2.2",
    "recompose": "^0.26.0",
    "styled-components": "^2.3.0",
    "styled-normalize": "^2.2.1",
    "styled-tools": "^0.2.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-inline-import": "^2.0.6",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-plugin-styled-components": "^1.3.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.12.1",
    "eslint-config-seegno": "^10.0.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-react": "^7.5.1",
    "execa": "^0.8.0",
    "flow-bin": "^0.60.1",
    "nodemon": "^1.12.5",
    "ora": "^1.3.0",
    "parcel-bundler": "^1.6.2",
    "semver": "^5.4.1",
    "sort-package-json": "^1.7.1"
  }
}
